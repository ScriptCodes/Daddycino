<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ImageInput?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BackgroundImage?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="656.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.daddycino.LoginController">
    <background>
        <Background>
            <images>
                <BackgroundImage>
                    <image>
                        <Image url="file:src/main/java/Media/CasinoLogin.jpg" />
                    </image>
                </BackgroundImage>
            </images>
        </Background>
    </background>
    <children>
        <Button layoutY="1.0" mnemonicParsing="false" prefHeight="4.0" prefWidth="1000.0" text="Button">
            <effect>
                <ImageInput>
                    <source>
                        <!-- You can keep this empty or provide a default image if needed -->
                    </source>
                </ImageInput>
            </effect>
        </Button>
        <TextField fx:id="UsernameField" layoutX="650.0" layoutY="269.0" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: #BB000E; -fx-border-width: 0px 0px 2px; -fx-text-fill: white;">
            <font>
                <Font name="Dubai Bold" size="14.0" />
            </font>
        </TextField>
        <PasswordField fx:id="PasswordField" layoutX="650.0" layoutY="328.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #BB000E; -fx-border-width: 0px 0px 2px; -fx-text-fill: white;">
            <font>
                <Font name="Dubai Bold" size="14.0" />
            </font>
        </PasswordField>
        <Button fx:id="LoginButton" layoutX="714.0" layoutY="390.0" mnemonicParsing="false" style="-fx-background-color: #7b7b7b;" text="Login" textFill="WHITE" onAction="#handleLogin">
            <font>
                <Font name="Dubai Bold" size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
